<div id="screen-{{_screenID}}" class="action-container focusable-ignored" aria-label="{{{title}}}" tabindex="-1">
  <h1 class="sr-only">{{displayTitle}}</h1>
  {{#each _childItems}}
  {{#if _isForm}}
  <form data-id="{{id}}" data-readable-id="{{readableID}}" id="simulation_form_{{@index}}_{{../componentID}}"
    class="simulation-form">
    {{#each _form}}
    {{#if type.input}}
    <label for="simulation_element_form_{{@index}}_{{../../componentID}}" class="sr-only">{{title}}</label>
    <div class="input-wrapper"
      style="width:{{_position._width}}%;height:{{_position._height}}%;top:{{_position._top}}%;left:{{_position._left}}%;">
      {{#if type.multiline}}
      <textarea id="simulation_element_form_{{@index}}_{{../../componentID}}" data-id="{{id}}"
        data-readable-id="{{readableID}}" class="input-zone simulation-form-element" style="font-size:{{_fontSize}}px;"
        {{#if _prefilled.placeholder}} placeholder="{{_prefilledValueInterpolated}}" {{/if}} {{#if
        _characterCounter}}maxlength="{{_characterCounterLimit}}" {{/if}}
        focusable="true">{{#if _prefilled.text}}{{_prefilledValueInterpolated}}{{/if}}</textarea>
      {{else}}
      <input id="simulation_element_form_{{@index}}_{{../../componentID}}" data-id="{{id}}"
        data-readable-id="{{readableID}}" type="{{#if type.datepicker}}date{{else}}text{{/if}}"
        class="input-zone simulation-form-element" style="font-size:{{_fontSize}}px;" {{#if _prefilled.placeholder}}
        placeholder="{{_prefilledValueInterpolated}}" {{/if}} {{#if _prefilled.text}}
        value="{{_prefilledValueInterpolated}}" {{/if}} {{#if _characterCounter}}maxlength="{{_characterCounterLimit}}"
        {{/if}} focusable="true" />
      {{/if}}
    </div>
    {{#if _characterCounter}}
    <div aria-live="polite" style="top:calc({{_position._topCounter}}% + 4px);left:{{_position._left}}%;"
      class="input-character-counter" counter-data-id="{{id}}" data-readable-id="{{readableID}}">{{t
      'adapt-simulation-remaining-characters' this }}</div>
    {{/if}}
    {{/if}}
    {{#if type.select}}
    <label for="simulation_element_form_{{@index}}_{{../../componentID}}" class="sr-only">{{title}}</label>
    <div class="select-wrapper"
      style="width:{{_position._width}}%;height:{{_position._height}}%;top:{{_position._top}}%;left:{{_position._left}}%;">
      <select id="simulation_element_form_{{@index}}_{{../../componentID}}" data-id="{{id}}"
        data-readable-id="{{readableID}}" name="options" id="options" class="select-zone simulation-form-element"
        style="font-size:{{_fontSize}}px;" focusable="true">
        {{#each _selectOptions}}
        <option value="{{_selectValue}}">{{_selectValue}}</option>
        {{/each}}
      </select>
    </div>
    {{/if}}
    {{#if type.submit}}
    <div class="button-wrapper"
      style="width:{{_position._width}}%;height:{{_position._height}}%;top:{{_position._top}}%;left:{{_position._left}}%;">
      <div id="simulation_element_form_{{@index}}_{{../../componentID}}" data-id="{{id}}"
        data-readable-id="{{readableID}}" role="{{#if type.button}}button{{/if}}{{#if type.link}}link{{/if}}"
        tabindex="0" aria-label="{{title}}" class="click-zone simulation-form-element form-submit" focusable="true">
      </div>
    </div>
    {{/if}}
    {{#if type.click}}
    <div class="button-wrapper"
      style="width:{{_position._width}}%;height:{{_position._height}}%;top:{{_position._top}}%;left:{{_position._left}}%;">
      <div id="simulation_element_form_{{@index}}_{{../../componentID}}" data-id="{{id}}"
        data-readable-id="{{readableID}}" role="{{#if type.button}}button{{/if}}{{#if type.link}}link{{/if}}"
        tabindex="0" aria-label="{{title}}" class="click-zone simulation-form-element" focusable="true">
      </div>
    </div>
    {{/if}}
    {{#if type.checkbox}}
    <label for="simulation_element_form_{{@index}}_{{../../componentID}}" class="sr-only">{{title}}</label>
    <div class="checkbox-wrapper"
      style="width:{{_position._width}}%;height:{{_position._height}}%;top:{{_position._top}}%;left:{{_position._left}}%;">
      <input id="simulation_element_form_{{@index}}_{{../../componentID}}" data-id="{{id}}"
        data-readable-id="{{readableID}}" type="checkbox" class="checkbox-zone simulation-form-element"
        focusable="true" />
    </div>
    {{/if}}
    {{/each}}
  </form>
  {{else}}
  {{#if type.input}}
  <label for="simulation_element_form_{{@index}}_{{../../componentID}}" class="sr-only">{{title}}</label>
  <div class="input-wrapper"
    style="width:{{_position._width}}%;height:{{_position._height}}%;top:{{_position._top}}%;left:{{_position._left}}%;">
    {{#if type.multiline}}
    <textarea id="simulation_element_{{@index}}_{{../componentID}}" data-id="{{id}}" data-readable-id="{{readableID}}"
      class="input-zone simulation-form-element" style="font-size:{{_fontSize}}px;" {{#if _prefilled.placeholder}}
      placeholder="{{_prefilledValueInterpolated}}" {{/if}} {{#if
      _characterCounter}}maxlength="{{_characterCounterLimit}}" {{/if}}
      focusable="true">{{#if _prefilled.text}}{{_prefilledValueInterpolated}}{{/if}}</textarea>
    {{else}}
    <input id="simulation_element_{{@index}}_{{../componentID}}" data-id="{{id}}" data-readable-id="{{readableID}}"
      type="{{#if type.datepicker}}date{{else}}text{{/if}}" class="input-zone simulation-action-element"
      style="font-size:{{_fontSize}}px;" {{#if _prefilled.placeholder}} placeholder="{{_prefilledValueInterpolated}}"
      {{/if}} {{#if _prefilled.text}} value="{{_prefilledValueInterpolated}}" {{/if}} focusable="true" />
    {{/if}}
  </div>
  {{/if}}
  {{#if type.select}}
  <label for="simulation_element_form_{{@index}}_{{../../componentID}}" class="sr-only">{{title}}</label>
  <div class="select-wrapper"
    style="width:{{_position._width}}%;height:{{_position._height}}%;top:{{_position._top}}%;left:{{_position._left}}%;">
    <select id="simulation_element_{{@index}}_{{../componentID}}" data-id="{{id}}" data-readable-id="{{readableID}}"
      name="options" id="options" class="select-zone simulation-action-element" style="font-size:{{_fontSize}}px;"
      focusable="true">
      {{#each _selectOptions}}
      <option value="{{_selectValue}}">{{_selectValue}}</option>
      {{/each}}
    </select>
  </div>
  {{/if}}
  {{#if type.click}}
  <div class="button-wrapper"
    style="width:{{_position._width}}%;height:{{_position._height}}%;top:{{_position._top}}%;left:{{_position._left}}%;">
    <div id="simulation_element_{{@index}}_{{../componentID}}" data-id="{{id}}" data-readable-id="{{readableID}}"
      role="{{#if type.button}}button{{/if}}{{#if type.link}}link{{/if}}" tabindex="0" aria-label="{{title}}"
      class="click-zone simulation-action-element" focusable="true">
    </div>
  </div>
  {{/if}}
  {{#if type.checkbox}}
  <label for="simulation_element_form_{{@index}}_{{../../componentID}}" class="sr-only">{{title}}</label>
  <div class="checkbox-wrapper"
    style="width:{{_position._width}}%;height:{{_position._height}}%;top:{{_position._top}}%;left:{{_position._left}}%;">
    <input id="simulation_element_{{@index}}_{{../componentID}}" data-id="{{id}}" data-readable-id="{{readableID}}"
      type="checkbox" class="checkbox-zone simulation-action-element" focusable="true" />
  </div>
  {{/if}}
  {{/if}}
  {{/each}}
</div>
